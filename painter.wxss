.loading-container {
  position:fixed;
  top:0;
  left:0;
  width:100%;
  height:100%;
  z-index:1000;
  opacity: 0.5;
  align-items: center;
  display: flex;
  justify-content: center;
}

.loading-text {
  font-family: 'PingFangSC-Light', sans-serif;
  font-size: 40rpx;
  color: white;
  padding-left: 20rpx;
}

@keyframes blink{
  0%{opacity: 1;}
  100%{opacity: 0;}
}
